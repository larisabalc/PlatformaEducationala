<Window x:Class="PlatformaEducationala.View.AdministratorMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlatformaEducationala.View"
        xmlns:vm="clr-namespace:PlatformaEducationala.ViewModel"
        mc:Ignorable="d"
        Title="AdministratorMenuWindow" Height="300" Width="300">
    <Window.DataContext>
        <vm:AdministratorMenuVM />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="MANAGE USERS" Command="{Binding OpenAdministratorUser}"/>
        <Button Grid.Row="1" Content="MANAGE MATERII AND SPECIALIZARI" Command="{Binding OpenAdministratorOther}" />
        <Button Grid.Row="2" Content="ADD ASOCIERI" Command="{Binding OpenAdministratorAsocieri}"/>
        <Button Grid.Row="3" Content="REMOVE ASOCIERI" Command="{Binding OpenAdministratorAsocieriOther}"/>
        <Button Grid.Row="4" Content="LOG OUT" Command="{Binding LogOut}"/>
    </Grid>
</Window>
