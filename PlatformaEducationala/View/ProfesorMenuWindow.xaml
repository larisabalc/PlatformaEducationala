<Window x:Class="PlatformaEducationala.View.ProfesorMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlatformaEducationala.View"
        xmlns:vm="clr-namespace:PlatformaEducationala.ViewModel"
        mc:Ignorable="d"
        Title="ProfesorMenuWindow" Height="300" Width="300">
    <Window.DataContext>
        <vm:ProfesorMenuVM />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="ADD NOTE/ABSENTE" Command="{Binding OpenProfesor}"/>
        <Button Grid.Row="1" Content="CALCULATE MEDII" Command="{Binding OpenCalculareMedii}" />
        <Button Grid.Row="4" Content="LOG OUT" Command="{Binding LogOut}"/>
    </Grid>
</Window>
